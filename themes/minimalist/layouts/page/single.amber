extends ../master

  block meta
    meta[name="description"][content=$.Description]
    
  block title
    | #{$.Title}

  block content
    if $.Params.backdrop
      div.backdrop
        img[src=$.Params.backdrop] 

    div.post.page
      .has_backdrop ? $.Params.backdrop
      .is_squeeze ? $.Params.backdrop 
      .thin ? $.Params.is_thin
      h1 #{$.Title}
      div #{$.Content}
      
      if $.Params.updated
        div Last Updated: #{$.Params.updated}
