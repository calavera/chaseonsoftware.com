HUGO_VERSION=0.18.1
ARCH=Linux-64bit

set -x
set -e

# Install Hugo if not already cached or upgrade an old version.
if [ ! -e $CIRCLE_BUILD_DIR/bin/hugo ] || ! [[ `hugo version` =~ v${HUGO_VERSION} ]]; then
  wget https://github.com/spf13/hugo/releases/download/v${HUGO_VERSION}/hugo_${HUGO_VERSION}_${ARCH}.tar.gz
  tar xvzf hugo_${HUGO_VERSION}_${ARCH}.tar.gz
  cp hugo_${HUGO_VERSION}_${ARCH}/hugo_${HUGO_VERSION}_${ARCH} $CIRCLE_BUILD_DIR/bin/hugo
fi

./script/bootstrap
